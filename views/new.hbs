<form class="form" action="/todo" method="post">
  <div class="form-group">
    <label for="title">Title</label>
    <input name="title" type="text" class="form-control" id="title" placeholder="Title of your task">
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <input name="description" type="text" class="form-control" id="desciption" placeholder="Describe your task">
  </div>
  <div class="form-group">
    <label for="priority">What is the Priority?</label>
    <select name="priority" class="form-control" id="priority">
      <option value="1">Priority 1</option>
      <option value="2">Priority 2</option>
      <option value="3">Priority 3</option>
      <option value="4">Priority 4</option>
      <option value="5">Priority 5</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Create</button>
  <a href="/todo"><button type="button" class="btn btn-success">Go back to todo's</button></a>
</form>
